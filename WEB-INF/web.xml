<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
    <context-param>
        <!-- 导航条-登录按钮 -->
        <param-name>HTML_NAVBAR_SIGNIN_BUTTON</param-name>
        <param-value>sign_in</param-value>
    </context-param>
    <context-param>
        <!-- 导航条-注册按钮 -->
        <param-name>HTML_NAVBAR_SIGNUP_BUTTON</param-name>
        <param-value>sign_up</param-value>
    </context-param>
    <context-param>
        <!-- 导航条-用户名按钮 -->
        <param-name>HTML_NAVBAR_USER_BUTTON</param-name>
        <param-value>username</param-value>
    </context-param>
    <context-param>
        <!-- 导航条-用户名内容超链接 -->
        <param-name>HTML_NAVBAR_USER_NAME</param-name>
        <param-value>dashboard</param-value>
    </context-param>
    <context-param>
        <!-- 登录页-用户名或密码错误弹窗 -->
        <param-name>HTML_SIGNIN_ALERT_INVALID_PASS</param-name>
        <param-value>error_invalid_pass</param-value>
    </context-param>
    <context-param>
        <!-- 登录页-用户注册成功弹窗 -->
        <param-name>HTML_SIGNIN_ALERT_USER_REGISTER_SUCCESSFUL</param-name>
        <param-value>success_register_success</param-value>
    </context-param>
    <context-param>
        <!-- 登录页-请先登录弹窗 -->
        <param-name>HTML_SIGNIN_ALERT_SIGNIN_FIRST</param-name>
        <param-value>info_need_login</param-value>
    </context-param>
    <context-param>
        <!-- 登录页-表单-email 输入框-->
        <param-name>HTML_SIGNIN_INPUT_EMAIL</param-name>
        <param-value>email</param-value>
    </context-param>
    <context-param>
        <!-- 登录页-表单-密码输入框-->
        <param-name>HTML_SIGNIN_INPUT_PASSWORD</param-name>
        <param-value>password</param-value>
    </context-param>
    <context-param>
        <!-- 登录页-表单-学生/教师登录单选按钮-->
        <param-name>HTML_SIGNIN_RADIO_USERTYPE</param-name>
        <param-value>usertype</param-value>
    </context-param>
    <context-param>
        <!-- 登录页-表单-教师登录选择-->
        <param-name>HTML_SIGNIN_RADIO_VALUE_TEACHER</param-name>
        <param-value>teacher</param-value>
    </context-param>
    <context-param>
        <!-- 登录页-表单-学生登录选择-->
        <param-name>HTML_SIGNIN_RADIO_VALUE_STUDENT</param-name>
        <param-value>student</param-value>
    </context-param>
    <context-param>
        <!-- 注册页-表单-email 输入框-->
        <param-name>HTML_SIGNUP_INPUT_EMAIL</param-name>
        <param-value>email</param-value>
    </context-param>
    <context-param>
        <!-- 注册页-表单-密码输入框-->
        <param-name>HTML_SIGNUP_INPUT_PASSWORD</param-name>
        <param-value>password</param-value>
    </context-param>
    <context-param>
        <!-- 注册页-表单-用户名输入框-->
        <param-name>HTML_SIGNUP_INPUT_USERNAME</param-name>
        <param-value>username</param-value>
    </context-param>
    <context-param>
        <!-- 注册页-Email 已被注册提示框 -->
        <param-name>HTML_SIGNUP_ALERT_USER_ALREADY_EXIST</param-name>
        <param-value>error_user_already_exist</param-value>
    </context-param>
    <context-param>
        <!-- session-用户名 -->
        <param-name>ATTR_USERNAME</param-name>
        <param-value>attr_username</param-value>
    </context-param>
    <context-param>
        <!-- session-用户类型 -->
        <param-name>ATTR_USERTYPE</param-name>
        <param-value>attr_usertype</param-value>
    </context-param>   
    <context-param>
        <!-- 数据库-学生用户名-->
        <param-name>DB_SUSERNAME</param-name>
        <param-value>sname</param-value>
    </context-param>
    <context-param>
        <!-- 数据库-学生密码-->
        <param-name>DB_SPASSWORD</param-name>
        <param-value>spassword</param-value>
    </context-param>
    <context-param>
        <!-- 数据库-学生 Email-->
        <param-name>DB_SEMAIL</param-name>
        <param-value>semail</param-value>
    </context-param>
    <context-param>
        <!-- 数据库-教师用户名-->
        <param-name>DB_TUSERNAME</param-name>
        <param-value>tname</param-value>
    </context-param>
    <context-param>
        <!-- 数据库-教师密码-->
        <param-name>DB_TPASSWORD</param-name>
        <param-value>tpassword</param-value>
    </context-param>
    <context-param>
        <!-- 数据库-教师 Email-->
        <param-name>DB_TEMAIL</param-name>
        <param-value>temail</param-value>
    </context-param>    
</web-app>